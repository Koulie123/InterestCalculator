@model InterestCalculator.Models.SimpleInterestViewModel

<h2>Simple Interest Calculator</h2>

<form asp-action="SimpleInterest" method="post">
    <div>
        <label asp-for="Principal" class="inputField">Principal:</label>
        <input asp-for="Principal" type="number" />
    </div>
    <div>
        <label asp-for="InterestRate" class="inputField">Annual Interest Rate (%):</label>
        <input asp-for="InterestRate" type="number" step="0.01" />
    </div>
    <div>
        <label asp-for="NumberOfInvestmentYears" class="inputField">Time (Years):</label>
        <input asp-for="NumberOfInvestmentYears" type="number" />
    </div>

    <button type="submit">Calculate</button>
</form>

@if (Model.FinalValue != 0)
{
    <p class="inputField">
        Interest Gained: $@Model.InterestGain
        Total Value at Maturity: $@Model.FinalValue
    </p>
}